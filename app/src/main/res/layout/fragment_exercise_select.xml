<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".presentation.screens.exercise_select.ExerciseSelectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/progress_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red" />

        <View
            android:id="@+id/progress_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green" />

        <View
            android:id="@+id/progress_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green" />

        <View
            android:id="@+id/progress_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red" />

        <View
            android:id="@+id/progress_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green" />

        <View
            android:id="@+id/progress_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_transparent" />

        <View
            android:id="@+id/progress_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_transparent" />

        <View
            android:id="@+id/progress_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_transparent" />

        <View
            android:id="@+id/progress_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_transparent" />

        <View
            android:id="@+id/progress_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCorrectAnswers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/green"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="3" />

        <TextView
            android:id="@+id/tvWrongAnswers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/red"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="2" />
    </LinearLayout>

    <TextView
        android:id="@+id/btnHint"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginEnd="6dp"
        android:background="@drawable/img_circle_background"
        android:gravity="center"
        android:text="@string/questionMark"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="22 x 02 =" />

        <TextView
            android:id="@+id/tvCorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:textColor="@color/green"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:text="@string/questionMark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/option_1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginHorizontal="6dp"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="1"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/option_2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="3"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/option_3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginHorizontal="6dp"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="3"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/option_4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginHorizontal="6dp"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="4"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</LinearLayout>