<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.screens.select_training.SelectTrainingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/training"
        android:textColor="@color/main_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:text="@string/setDifficulty"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/minNumber"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_edit_text"
        android:focusedByDefault="false"
        android:gravity="center"
        android:hint="min."
        android:importantForAutofill="no"
        android:inputType="number"
        android:lines="1"
        android:maxLength="3"
        android:padding="5dp"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/maxNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDifficulty"
        tools:ignore="HardcodedText"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/maxNumber"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_edit_text"
        android:focusedByDefault="false"
        android:gravity="center"
        android:hint="max."
        android:importantForAutofill="no"
        android:inputType="number"
        android:lines="1"
        android:maxLength="3"
        android:padding="5dp"
        android:text="10"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/minNumber"
        app:layout_constraintTop_toBottomOf="@id/tvDifficulty"
        tools:ignore="HardcodedText"
        tools:targetApi="o" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minNumber"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@id/minNumber"
        app:layout_constraintStart_toStartOf="@id/minNumber"
        app:layout_constraintTop_toBottomOf="@id/minNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maxNumber"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="@id/maxNumber"
        app:layout_constraintStart_toStartOf="@id/maxNumber"
        app:layout_constraintTop_toBottomOf="@id/maxNumber" />

    <TextView
        android:id="@+id/tvSelectOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/selectOperation"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvDifficulty"
        app:layout_constraintTop_toBottomOf="@id/minNumber" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvSelectOperation">

        <RadioButton
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="รท"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvSelectGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/selectGame"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvDifficulty"
        app:layout_constraintTop_toBottomOf="@id/tvSelectOperation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectGame">

        <ImageButton
            android:id="@+id/btnGameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:foreground="@drawable/icon_game_input"
            android:scaleType="centerCrop"
            android:src="@drawable/img_circle_background" />

        <ImageButton
            android:id="@+id/btnGameSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:foreground="@drawable/icon_game_select"
            android:scaleType="centerCrop"
            android:src="@drawable/img_circle_background" />

        <ImageButton
            android:id="@+id/btnGameTrueOrFalse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:foreground="@drawable/icon_game_true_or_false"
            android:scaleType="centerCrop"
            android:src="@drawable/img_circle_background" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>