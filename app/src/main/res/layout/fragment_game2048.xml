<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".presentation.screens.games.game_2048.Game2048Fragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.33"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/body"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTileGoal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/tile_background"
            android:backgroundTint="@color/tile2048"
            android:gravity="center"
            android:text="@string/name2048"
            android:textAlignment="center"
            android:textColor="@color/game_2048_light_text"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scoreTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scoreTitle"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="14dp"
                android:paddingBottom="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bestScoreTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/best"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bestScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="14dp"
                android:paddingBottom="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/newGameButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:drawableEnd="@drawable/ic_refresh_24"
        android:drawableTint="@color/tile2048"
        android:text="@string/restart"
        android:textAllCaps="false"
        android:textColor="@color/tile2048"
        app:layout_constraintBottom_toTopOf="@id/body"
        app:layout_constraintEnd_toEndOf="@id/body" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <View
            android:id="@+id/touchReceiver"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@id/gameContainer"
            app:layout_constraintEnd_toEndOf="@id/gameContainer"
            app:layout_constraintStart_toStartOf="@id/gameContainer"
            app:layout_constraintTop_toTopOf="@id/gameContainer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gameContainer"
            style="@style/gameContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                app:layout_constraintGuide_percent="0.75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                app:layout_constraintGuide_percent="0.75" />

            <ImageView
                android:id="@+id/tile_0_0"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tile_0_1"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_left"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tile_0_2"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tile_0_3"
                style="@style/tile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/tile_1_0"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tile_0_0" />

            <ImageView
                android:id="@+id/tile_1_1"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_left"
                app:layout_constraintTop_toBottomOf="@id/tile_0_0" />

            <ImageView
                android:id="@+id/tile_1_2"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintTop_toBottomOf="@id/tile_0_0" />

            <ImageView
                android:id="@+id/tile_1_3"
                style="@style/tile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintTop_toBottomOf="@id/tile_0_0" />


            <ImageView
                android:id="@+id/tile_2_0"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tile_1_0" />

            <ImageView
                android:id="@+id/tile_2_1"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_left"
                app:layout_constraintTop_toBottomOf="@id/tile_1_0" />

            <ImageView
                android:id="@+id/tile_2_2"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintTop_toBottomOf="@id/tile_1_0" />

            <ImageView
                android:id="@+id/tile_2_3"
                style="@style/tile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintTop_toBottomOf="@id/tile_1_0" />


            <ImageView
                android:id="@+id/tile_3_0"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tile_2_0" />

            <ImageView
                android:id="@+id/tile_3_1"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical_left"
                app:layout_constraintTop_toBottomOf="@id/tile_2_0" />

            <ImageView
                android:id="@+id/tile_3_2"
                style="@style/tile"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_middle"
                app:layout_constraintTop_toBottomOf="@id/tile_2_0" />

            <ImageView
                android:id="@+id/tile_3_3"
                style="@style/tile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical_right"
                app:layout_constraintTop_toBottomOf="@id/tile_2_0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/moveCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/body"
        app:layout_constraintTop_toBottomOf="@id/body"
        tools:text="0 moves" />

    <Button
        android:id="@+id/undoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/ic_undo_24"
        android:textSize="18sp"
        android:text="@string/undo"
        app:textAllCaps="false"
        app:backgroundTint="@color/cell_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/body" />

</androidx.constraintlayout.widget.ConstraintLayout>